		return eventDao.getOne(eventsId);
	}

	@Override
	public Events addEvents(Events event) {

		list.add(event);
		return event;
	}

	
	@Override
	public Events updateEvents(Events event) {

		list.forEach(e ->
        {
        	if(e.getEvent_Date() == event.getEvent_Date())
        	{
        		e.setEvent_Name(event.getEvent_Name());
        		e.setEvent_Description(event.getEvent_Description());
        	}
        });
		return event;
	}

	
	@Override
	public Events deleteEvent(String event_Date) {

		list=this.list.stream().filter(e-> e.getEvent_Date()! = event_Date).collect(Collator.toList());
		return null;
	}

	
	}


