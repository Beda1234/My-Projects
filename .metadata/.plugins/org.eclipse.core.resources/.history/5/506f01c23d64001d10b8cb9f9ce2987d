package com.events.main.services;

import java.util.ArrayList;

import java.util.List;

import org.springframework.stereotype.Service;

import com.events.main.entity.Events;

@Service
public class EventsServiceClass implements EventsService {
	
	List<Events> list;
	
	public EventsServiceClass()
	{
		list= new ArrayList<>();
		list.add(new Events(12,"Ganesh Puja","festival"));
		list.add(new Events(15,"saraswati Puja","festival"));
	}

	@Override
	public List<Events> getEvents() {

		return list;
	}

	@Override
	public Events getEvents(int eventsId) {

		Events e=null;
		for(Events events:list)
		{
			if(events.getEvent_Id()==eventsId)
           {
	         e=events;
	         break;
           }

        }
		return e;
	}

	@Override
	public Events addEvents(Events event) {

		list.add(event);
		return event;
	}

	
	}


